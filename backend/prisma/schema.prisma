generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
   engineType = "library"
  binaryTargets = ["native", "rhel-openssl-1.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User{
  id        String    @id @default(uuid())
  email     String    @unique
  password  String
  notes     Notes[]
  createdAt DateTime
}

model Notes{
  id          String   @id @default(uuid())
  title       String    
  content     String
  createdBy   User     @relation(fields: [creatorId], references: [id])
  creatorId   String
}



